<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChaptersFragment"
    android:background="@drawable/tele">

    <androidx.cardview.widget.CardView
        android:id="@+id/codeIIEST"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/codeiiest" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_1"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Card_2"
        app:layout_constraintTop_toBottomOf="@id/codeIIEST">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ml" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_2"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/Card_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/codeIIEST">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/cp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/mlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Machine \nLearning &amp; AI"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/Card_1"
        app:layout_constraintLeft_toLeftOf="@id/Card_1"
        app:layout_constraintRight_toRightOf="@id/Card_1" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/cpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Competitive \n     Coding"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/Card_2"
        app:layout_constraintRight_toRightOf="@id/Card_2"
        app:layout_constraintLeft_toLeftOf="@id/Card_2"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_3"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Card_4"
        app:layout_constraintTop_toBottomOf="@id/Card_1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/dev" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_4"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/Card_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Card_2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/cyber" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/devText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Software\nDevelopment"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/Card_3"
        app:layout_constraintLeft_toLeftOf="@id/Card_3"
        app:layout_constraintRight_toRightOf="@id/Card_3"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/cyberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Cyber\nSecurity"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/Card_4"
        app:layout_constraintRight_toRightOf="@id/Card_4"
        app:layout_constraintLeft_toLeftOf="@id/Card_4"/>

</androidx.constraintlayout.widget.ConstraintLayout>